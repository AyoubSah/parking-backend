generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  fullName  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reservations Reservation[] @relation("UserReservations")
}

model Parking {
  id          Int      @id @default(autoincrement())
  parkingName String   @unique
  address     String
  latitude    Float
  longitude   Float
  totalPlaces Int
  price       Float
  rating      Float
  photoUrl    String
  description String

  reservations   Reservation[] @relation("ParkingReservations")

  @@index([parkingName])
}

model Reservation {
  id        String   @id @default(cuid())
  parkingId Int
  userId    Int
  startTime DateTime
  endTime   DateTime
  parking   Parking  @relation("ParkingReservations", fields: [parkingId], references: [id])
  driver    User     @relation("UserReservations", fields: [userId], references: [id])
}